@model GymManagementSystem.Models.AIGymProfile

@{
    ViewData["Title"] = "AI Planınız";
}

<div class="container mt-5">
    <div class="card border-success shadow">
        <div class="card-header bg-success text-white">
            <h2>🤖 Yapay Zeka Tavsiyesi</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 border-end">
                    <h4>Mevcut Bilgileriniz:</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Kilo:</strong> @Model.Weight kg</li>
                        <li class="list-group-item"><strong>Boy:</strong> @Model.Height cm</li>
                        <li class="list-group-item"><strong>Hedef:</strong> @Model.Goal</li>
                    </ul>
                    <div class="mt-4 text-center">
                        <a asp-action="Reset" class="btn btn-outline-danger btn-sm">Sil ve Tekrar Dene</a>
                    </div>
                </div>
                <div class="col-md-8">
                    <h4 class="text-success mb-3">💡 Size Önerilen Plan:</h4>
                    <div class="p-4 bg-light rounded border">
                        <p class="lead" style="white-space: pre-wrap;">@Model.AIResult</p>
                    </div>
                    <div class="alert alert-info mt-3">
                        <small>Bu plan, vücut ölçülerinize göre yapay zeka tarafından otomatik oluşturulmuştur.</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>