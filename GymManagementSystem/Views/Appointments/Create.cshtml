@model GymManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<h1>Create Appointment</h1>

<h4>Book your Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label"></label>
                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GymServiceId" class="control-label">Service</label>
                <select asp-for="GymServiceId" class="form-control" asp-items="ViewBag.GymServiceId">
                    <option value="">-- Select Service --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TrainerId" class="control-label">Trainer</label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId">
                    <option value="">-- Select Trainer --</option>
                </select>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Book Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to My Appointments</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}