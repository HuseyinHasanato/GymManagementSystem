@model GymManagementSystem.Models.Appointment

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<h1>Randevu Oluştur</h1>

<h4>Seansınızı Ayırtın</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AppointmentDate" class="control-label">Randevu Tarihi ve Saati</label>
                <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GymServiceId" class="control-label">Hizmet</label>
                <select asp-for="GymServiceId" class="form-control" asp-items="ViewBag.GymServiceId">
                    <option value="">-- Hizmet Seçiniz --</option>
                </select>
                <span asp-validation-for="GymServiceId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TrainerId" class="control-label">Eğitmen</label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId">
                    <option value="">-- Eğitmen Seçiniz --</option>
                </select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Şimdi Rezervasyon Yap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Randevularıma Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}